    gap: 10px;
    text-decoration: none;
}

.imgContainer {
    background-color: #EAD1FF;
    padding: 1em;
    border-radius: 50%;
    padding: 1.5em;
}
.itemz-text {
    color: #000;
}
.slick-prev:before, .slick-next:before{
    color: #000;
}
  .slick-prev{
    left:-10px;
  }
  .slick-next{
    right:-10px;
  }
  .topHead{
    text-align:center;
    font-weight:bold;
    margin-top: 2em;
  }
  hr{
    margin:4rem 3rem;
  }
</style>


