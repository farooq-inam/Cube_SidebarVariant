  <div class="vamBam">
    <h2 class="topHead {% if settings.animations_reveal_on_scroll %} scroll-trigger  animate--slide-in{% endif %}">SHOP DEALS</h2>
    <hr>
      <div class="new {% if settings.animations_reveal_on_scroll %} scroll-trigger  animate--slide-in{% endif %}">
        {% for block in section.blocks %}
          <div class="itemz {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              <a href="{{ block.settings.catLink }}" class="clickable">
                  <div class="imgContainer" style="background-color:{{ block.settings.bgColor }};">
                      <img src="{{ block.settings.theImg | img_url: "" }}" alt="">
                  </div>
                  <div class="itemz-text">
                      {{ block.settings.catName }}
                  </div>
              </a>
          </div>
        {% endfor %}
      </div>    
  </div>

